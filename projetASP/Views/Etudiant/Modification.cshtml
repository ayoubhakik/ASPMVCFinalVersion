@model projetASP.Models.Etudiant
@{

    Layout = "~/Views/Shared/_LayoutEtudiant.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 " style="margin:auto;">

                <div class="card">
                    @using (Html.BeginForm("Modification", "Etudiant", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {

                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.cne)
                        <div role="main" class="form-all">
                            <ul class="form-section page-section">
                                <li id="cid_5" class="form-input-wide" data-type="control_head">
                                    <div style="display:table;width:100%">
                                        <div class="form-header-group hasImage header-default" data-imagealign="Left">
                                            <div class="header-logo">
                                                <img src="~/Image/@Model.photo_link" alt="" width="200" class="header-logo-left" />
                                            </div>
                                            <div class="header-text httal htvam">
                                                <h2 id="header_5" class="form-header" data-component="header">
                                                    Modification des Informations Personelles
                                                </h2>
                                                <div id="subHeader_5" class="form-subHeader">
                                                    Welcome @Model.nom @Model.prenom   @ViewBag.choix
                                                </div>
                                            </div>
                                            <span class="fas fa-edit" onclick="$('#Edit').toggle()"></span>
                                            <p id="Edit">
                                                <input type="file" name="ImageFile" />
                                                <input type="submit" class="btn btn-warning" name="Update" value="Upload" />
                                            </p>
                                        </div>
                                    </div>
                                </li>

                                <li class="form-line" data-type="control_fullname" id="id_3">
                                    <label class="form-label form-label-top form-label-auto" id="label_3" for="first_3"> Name </label>
                                    <div id="cid_3" class="form-input-wide">
                                        <div data-wrapper-react="true">
                                            <span class="form-sub-label-container " style="vertical-align:top" data-input-type="first">
                                                @Html.EditorFor(model => model.nom, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                                @Html.ValidationMessageFor(model => model.nom, "", new { @class = "text-danger" })
                                                <label class="form-sub-label" for="first_3" id="sublabel_3_first" style="min-height:13px" aria-hidden="false"> First Name </label>
                                            </span>
                                            <span class="form-sub-label-container " style="vertical-align:top" data-input-type="last">
                                                @Html.EditorFor(model => model.prenom, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                                @Html.ValidationMessageFor(model => model.prenom, "", new { @class = "text-danger" })
                                                <label class="form-sub-label" for="last_3" id="sublabel_3_last" style="min-height:13px" aria-hidden="false"> Last Name </label>
                                            </span>
                                        </div>
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_calculation" id="id_12">
                                    <label class="form-label form-label-top form-label-auto" id="label_12" for="input_12"> CIN (Carte d'identite Nationale) </label>
                                    <div id="cid_12" class="form-input-wide">
                                        @Html.EditorFor(model => model.cin, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.cin, "", new { @class = "text-danger" })
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_calculation" id="id_15">
                                    <label class="form-label form-label-top form-label-auto" id="label_15" for="input_15"> CNE(Code Nationale d'Etudiant) </label>
                                    <div id="cid_15" class="form-input-wide">
                                        @Html.EditorFor(model => model.cne, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
                                        @Html.ValidationMessageFor(model => model.cne, "", new { @class = "text-danger" })
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_calculation" id="id_15">
                                    <label class="form-label form-label-top form-label-auto" id="label_15" for="input_15"> Date de Naissance </label>
                                    <div id="cid_17" class="form-input-wide">
                                        @Html.EditorFor(model => model.dateNaiss, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.dateNaiss, "", new { @class = "text-danger" })
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_calculation" id="id_18">
                                    <label class="form-label form-label-top form-label-auto" id="label_18" for="input_18"> Lieu de Naissance </label>
                                    <div id="cid_18" class="form-input-wide">
                                        <input type="text" data-component="calculation" data-defaultvalue="0" class="form-control" name="q18_lieuDe18" value="0" size="20" />
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_calculation" id="id_19">
                                    <label class="form-label form-label-top form-label-auto" id="label_19" for="input_19"> Nationalité </label>
                                    <div id="cid_19" class="form-input-wide">
                                        @Html.EditorFor(model => model.nationalite, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.nationalite, "", new { @class = "text-danger" })
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_calculation" id="id_19">
                                    <label class="form-label form-label-top form-label-auto" id="label_19" for="input_19"> Phone number </label>
                                    <div class="form-input-wide">
                                        @Html.EditorFor(model => model.phone, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                        @Html.ValidationMessageFor(model => model.phone, "", new { @class = "text-danger" })
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_calculation">
                                    <label class="form-label form-label-top form-label-auto" for="input_19"> Phone number </label>
                                    <div class="form-input-wide">
                                        @Html.EditorFor(model => model.gsm, new { htmlAttributes = new { @class = "form-control", type = "number" } })
                                        @Html.ValidationMessageFor(model => model.gsm, "", new { @class = "text-danger" })
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_email" id="id_7">
                                    <label class="form-label form-label-top form-label-auto" id="label_7" for="input_7"> Email </label>
                                    <div class="form-input-wide">
                                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                                        <label class="form-sub-label" for="input_7" id="sublabel_input_7" style="min-height:13px" aria-hidden="false"> example@example.com </label>
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_email" id="id_7">
                                    <label class="form-label form-label-top form-label-auto" id="label_7" for="input_7"> Adress </label>
                                    <div class="form-input-wide">
                                        @Html.EditorFor(model => model.address, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.address, "", new { @class = "text-danger" })
                                        <label class="form-sub-label" for="input_7" id="sublabel_input_7" style="min-height:13px" aria-hidden="false"> Street Adresse  </label>
                                    </div>
                                </li>
                                <li class="form-line" data-type="control_email" id="id_7">
                                    <div class="form-input-wide">
                                        @Html.EditorFor(model => model.ville, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.ville, "", new { @class = "text-danger" })
                                        <label class="form-sub-label" for="input_7" id="sublabel_input_7" style="min-height:13px" aria-hidden="false"> City </label>
                                    </div>
                                </li>
                                @{
                                    if (Model.choix != null)
                                    {



                                        <li class="form-line" data-type="control_matrix" id="id_1">
                                            <label class="form-label form-label-top" id="label_1" for="input_1"> Choix de Filiere </label>
                                            <div id="cid_1" class="form-input-wide">
                                                <table summary="" role="presentation" cellPadding="4" cellSpacing="0" class="form-matrix-table" data-component="matrix">
                                                    <tbody>
                                                        <tr>
                                                            <th style="border:none; width: 500px">
                                                            </th>
                                                            <th scope="col" class="form-matrix-column-headers form-matrix-column_0">
                                                                <label id="label_1_col_0"> 1ere Choix </label>
                                                            </th>
                                                            <th scope="col" class="form-matrix-column-headers form-matrix-column_1">
                                                                <label id="label_1_col_1"> 2 ème choix </label>
                                                            </th>
                                                            <th scope="col" class="form-matrix-column-headers form-matrix-column_2">
                                                                <label id="label_1_col_2"> 3 eme Choix </label>
                                                            </th>
                                                        </tr>
                                                        <tr role="group" aria-labelledby="label_1 label_1_row_0">
                                                            <th scope="row" style="text-align:left" class="form-matrix-row-headers">
                                                                <label id="label_1_row_0"> Genie Informatique </label>
                                                            </th>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="F1" type="radio" name="choix1" value="F" onClick=desactivefilieres() @(Model.choix.Substring(0, 1) == "F" ? "Checked" : "") />
                                                            </td>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="F2" type="radio" name="choix2" value="F" onClick=desactivefilieres() @(Model.choix.Substring(1, 1) == "F" ? "Checked" : "") />

                                                            </td>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="F3" type="radio" name="choix3" value="F" onClick=desactivefilieres() @(Model.choix.Substring(2, 1) == "F" ? "Checked" : "") />
                                                            </td>
                                                        </tr>
                                                        <tr role="group" aria-labelledby="label_1 label_1_row_1">
                                                            <th scope="row" style="text-align:left" class="form-matrix-row-headers">
                                                                <label id="label_1_row_1"> Genie Telecominication et Réseau </label>
                                                            </th>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="T1" type="radio" name="choix1" value="T" onClick=desactivefilieres() @(Model.choix.Substring(0, 1) == "T" ? "Checked" : "") />
                                                            </td>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="T2" type="radio" name="choix2" value="T" onClick=desactivefilieres() @(Model.choix.Substring(1, 1) == "T" ? "Checked" : "") />
                                                            </td>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="T3" type="radio" name="choix3" value="T" onClick=desactivefilieres() @(Model.choix.Substring(2, 1) == "T" ? "Checked" : "")>
                                                            </td>
                                                        </tr>
                                                        <tr role="group" aria-labelledby="label_1 label_1_row_2">
                                                            <th scope="row" style="text-align:left" class="form-matrix-row-headers">
                                                                <label id="label_1_row_2"> Genie Indus </label>
                                                            </th>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="D1" type="radio" name="choix1" value="D" onClick=desactivefilieres() @(Model.choix.Substring(0, 1) == "D" ? "Checked" : "") />
                                                            </td>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="D2" type="radio" name="choix2" value="D" onClick=desactivefilieres() @(Model.choix.Substring(1, 1) == "D" ? "Checked" : "") />
                                                            </td>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="D3" type="radio" name="choix3" value="D" onClick=desactivefilieres() @(Model.choix.Substring(2, 1) == "D" ? "Checked" : "") />
                                                            </td>
                                                        </tr>
                                                        <tr role="group" aria-labelledby="label_1 label_1_row_3">
                                                            <th scope="row" style="text-align:left" class="form-matrix-row-headers">
                                                                <label id="label_1_row_3"> Genie Procede et M.C </label>
                                                            </th>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="P1" type="radio" name="choix1" value="P" onClick=desactivefilieres() @(Model.choix.Substring(0, 1) == "P" ? "Checked" : "") />
                                                            </td>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="P2" type="radio" name="choix2" value="P" onClick=desactivefilieres() @(Model.choix.Substring(1, 1) == "P" ? "Checked" : "") />
                                                            </td>
                                                            <td style="text-align:center" class="form-matrix-values">
                                                                <input id="P3" type="radio" name="choix3" value="P" onClick=desactivefilieres() @(Model.choix.Substring(2, 1) == "P" ? "Checked" : "") />
                                                            </td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </li>

                                    }
                                }
                                <li class="form-line" data-type="control_button" id="id_2">
                                    <div id="cid_2" class="form-input-wide">
                                        <div style="margin-left:156px" data-align="auto" class="form-buttons-wrapper  ">
                                            <button id="input_2" name="Update" type="submit" class="form-submit-button form-submit-button-simple_black" data-component="button" data-content="">
                                                Valider la mise à jour des données
                                            </button>
                                        </div>
                                    </div>
                                </li>
                            </ul>

                        </div>
                        @ViewBag.Javascript

                    }

                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/EtudiantScript.js")
