                            <th>Cne</th>
                            <th>Cin</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Note generale</th>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {

                                }
                                else
                                {

                                    foreach (var item in Model)
                                    {
                                        if (item.idFil == 1)
                                        {
                                            <tr>
                                                <th>
                                                    @Html.DisplayFor(modelItem => item.cne)
                                                </th>
                                                <th>
                                                    @Html.DisplayFor(modelItem => item.cin)
