@model IEnumerable<projetASP.Models.Etudiant>

@{
    ViewBag.Title = "Tous les etudiants";
    Layout = "~/Views/Shared/_DepartementLayout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">Informatique</h4>
                    </div>
                    <div class="card-body table-responsive">

                        

                        <table class="table table-hover">
                            <thead class="text-warning">
                            <th>Cne</th>
                            <th>Cin</th>
                            <th>Nom</th>
                            <th>Prenom</th>
                            <th>Choix</th>
                            <th>Note 1</th>
                            <th>Note 2</th>
                            <th>Note generale</th>

                            <th>valide ?</th>
                            </thead>
                            <tbody>
                                @if (Model == null)
                                {

                                }
                                else
                                {

                                    foreach (var item in Model)
                                    {
                                <tr>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.cne)
                                    </th>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.cin)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.nom)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.prenom)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.choix)
                                    </th>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.noteFstYear)
                                    </td>
                                    <th>
                                        @Html.DisplayFor(modelItem => item.noteSndYear)
                                    </th>
                                    <th>
                                        (@((item.noteSndYear+item.noteFstYear)/2))
                                    </th>
                                    <td>
                                        @if (item.Validated == true)
                                        {
                                            <span>Oui</span>
                                        }
                                        else
                                        {
                                            <span>Non</span>
                                        }
                                    </td>


                                </tr>
                                    }

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            
           

        </div>
    </div>
</div>
