@model IEnumerable<projetASP.Models.Etudiant>

@{
    Layout = "~/Views/Shared/_DepartementLayout.cshtml";
}

<style>
    .imageTire {
        height: 200px;
        width: 200px;
        border: 1px gray solid;
        display: inline-flex;
        margin: 10px;
        padding: 10px;
    }
  
        .imageDiv > img {
            height: 150px;
            width: 160px;
            display: block;
        }
    span {
        text-align: center;
    }
</style>



<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header card-header-primary">
                        <h4 class="card-title">
                            <h2>Les photo de tous les etudiants</h2>
                        </h4>
                    </div>
                    <div class="card-body table-responsive">



                        <table class="table table-hover">

                            <tbody>
                                @if (Model == null)
                                {
                                    <span>no data founded</span>
                                }
                                else
                                {
                                    foreach (var item in Model)
                                    {
                                    <div class="imageTire">
                                        <div class="imageDiv">
                                            <img src="~/Image/@item.photo_link" alt="Photo" class="header-logo-left" /><br />

                                        </div>
                                        <div>
                                            <span text-align="center">  @Html.DisplayFor(modelItem => item.nom)   @Html.DisplayFor(modelItem => item.prenom)</span>
                                        </div>
                                    </div>
                                    }
                                   
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>



        </div>
    </div>
</div>


